{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "google": "readonly"
    },
    "plugins": [
        "filenames"
    ],
    "rules": {
        "no-continue": "off",
        "no-restricted-syntax": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "filenames/match-regex": ["error", "^[a-z]+([A-Z][a-z]+)*$", true]
    }
}
