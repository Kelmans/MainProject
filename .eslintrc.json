{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "filenames"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "filenames/match-regex": 2,
        "filenames/match-exported": [ 2, "kebab" ],
        "filenames/no-index": 2
    }
}
